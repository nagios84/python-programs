'''
n=5
i = 0
while(i<n):
    j = 0
    while(j < i):
        print '*',
        j = j+1
    print ""
    i = i+1


	
	
i = n
while(i>0):
    i = 1
    while(i<n):
        print '*',
        i = i+1
    print ""
    i = i-1
